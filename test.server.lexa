# config for testing through the lxServer
# test - list of tests to run, otherwise all tests are run.
# [functions {
#   <global function defs for lxExression>
# }]
# servers {
#   <test name> {
#     [functions {
#       <function defs for this test>
#     }]
#     broker {
#       <broker config for this test>
#     }
#     message {
#       <message to send for this test>
#     }
#   }
# }
logFile .\\log\\test.server.log
# test passThrough
servers {
    echo {
        broker {
            name echoTest
			type inline
            serviceList {
                echoService {
                    processList {
                        echo {
                            # loader - lexa.core.server.factory.InternalLoader
                            class - Echo
                        }
                    }
                }
            }
            logging {
                * {
                    * ? true
                    DEBUG ? false
                }
            }
        }
        message {
            service - echoService
            message - echo
            request {
                testMessage - ### echo body ###
            }
        }
    }

    passThrough {
        broker {
            name - passTest
			type inline
            wildcard - passService
            serviceList {
                echoService {
                    processList {
                        echo {
                            # loader - lexa.core.server.factory.InternalLoader
                            class - Echo
                            maxProcesses % 1
                        }
                    }
                }
                passService {
                    wildcard - pass
                    processList {
                        pass {
                            # loader - lexa.core.server.factory.InternalLoader
                            class - PassThrough
                            connectionName - local
                            maxProcesses % 1
                            config {
                                allowAnonymous ? false
                                serviceList {
                                    echo - echoService
                                }
                            }
                        }
                    }
                }
            }
            logging {
                * {
                    * ? true
                    DEBUG ? false
                }
            }
        }
        message {
            service - testService
            message - echo
            request {
                testMessage - ### pass through test ###
            }
        }
    }
}
